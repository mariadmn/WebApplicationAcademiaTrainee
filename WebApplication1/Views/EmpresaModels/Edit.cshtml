@model WebApplication1.Models.EmpresaModel
@Html.ValidationSummary()

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Codigo" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeFantasia" class="control-label"></label>
                <input asp-for="NomeFantasia" class="form-control" />
                <span asp-validation-for="NomeFantasia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CNPJ" class="control-label"></label>
                <input asp-for="CNPJ" class="form-control"/>
                <span asp-validation-for="CNPJ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Situação" class="control-label"></label>
                <select asp-for="Situação" class="form-select">
                    <option value="true">Ativo</option>
                    <option value="false">Inativo</option>
                </select>
                <span asp-validation-for="Situação"></span>
            </div>
            <div class="form-group">
                 <a asp-action="Index"><button style="margin:5px;" class="btn btn-dark" type="button"><i class="fa fa-arrow-left"></i> Voltar</button></a> |
                <input style="margin:5px;" type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
