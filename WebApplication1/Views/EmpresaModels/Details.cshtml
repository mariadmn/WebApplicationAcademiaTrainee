@model WebApplication1.Models.EmpresaModel
@Html.ValidationSummary()

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>EmpresaModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeFantasia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeFantasia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CNPJ)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CNPJ)
        </dd>
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Situação)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Situação == true)
            {
                <span>Ativo</span>
            }
            else
            {
                <span>Inativo</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Codigo"><button class="btn btn-primary" type="button">Edit</button></a> |
    <a asp-action="Index"><button class="btn btn-dark" type="button">Voltar</button></a>
</div>
