@model EmpresaModel
@{
    ViewData["Title"] = "Empresa";
}

<h1>@ViewData["Title"]</h1>
<p>Página de cadastro de empresa.</p>

<form asp-action="Create">
    <div class="mb-3">
        <label for="exampleInputName" class="form-label">Nome</label>
        <input type="text" class="form-control" id="exampleInputName" asp-for="Nome" placeholder="ex: Evino ES Mercadorias">
    </div>
    <div class="mb-3">
        <label for="exampleInputFantasyName" class="form-label">Nome Fantasia</label>
        <input type="text" class="form-control" id="exampleInputFantasyName" asp-for="NomeFantasia" placeholder="ex: Evino">
    </div>
    <div class="mb-3">
        <label for="exampleInputCNPJ" class="form-label">CNPJ</label>
        <input type="text" class="form-control" id="exampleInputCNPJ" asp-for="CNPJ" placeholder="ex: XX.XXX.XXX/0001-XX">
    </div>
